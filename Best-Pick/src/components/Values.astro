<span
    class="text-lg transition-opacity duration-300 font-bold text-primary-200 ml-4"
>
Respect.
</span>

<script>
    const values = [
        "integrity",
        "Value",
        "Commitment",
        "Excellence",
        "Teamwork",
        "Innovation",
        "Customer Focus",
        "Respect",
        "Passion"
    ];

    const spanElement = document.querySelector(".duration-300");

    function changeWord() {
        spanElement.classList.remove("opacity-100");
        spanElement.classList.add("opacity-0");

        setTimeout(() => {
            const random = Math.floor(Math.random() * values.length);
            spanElement.innerHTML = values[random] + ".";
            spanElement.classList.remove("opacity-0");
            spanElement.classList.add("opacity-100");
        }, 500);
    }

    setInterval(changeWord, 2000);

</script>
